<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    
    <!-- ë¡œê·¸ íŒŒì¼ ê²½ë¡œ (í™˜ê²½ë³€ìˆ˜ë¡œ ì˜¤ë²„ë¼ì´ë“œ ê°€ëŠ¥) -->
    <property name="LOG_FILE" value="${LOG_FILE:-logs/crawler.log}"/>
    <property name="LOG_PATH" value="${LOG_PATH:-logs}"/>
    
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <!-- File Appender (ìžë™ ë””ë ‰í† ë¦¬ ìƒì„±) -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <!-- ðŸš€ ë””ë ‰í† ë¦¬ ìžë™ ìƒì„± -->
        <file>${LOG_FILE}</file>
        
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
        
        <!-- Rolling Policy -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- ë‚ ì§œë³„ + í¬ê¸°ë³„ ë¡¤ë§ (ë””ìŠ¤í¬ ê³µê°„ ë³´í˜¸ë¥¼ ìœ„í•´ ìž‘ì€ í¬ê¸°ë¡œ ì„¤ì •) -->
            <fileNamePattern>${LOG_PATH}/crawler.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
    </appender>
    
    <!-- Spring Profileë³„ ì„¤ì • -->
    <springProfile name="local,dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
    </springProfile>
    
    <!-- ðŸš€ GitHub Actions / Docker: ì½˜ì†”ë§Œ ì‚¬ìš© (íŒŒì¼ ë¡œê·¸ ë¹„í™œì„±í™”) -->
    <springProfile name="ci,docker">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
    </springProfile>
    
    <!-- Production: íŒŒì¼ë§Œ ì‚¬ìš© (stdoutì€ Docker logsë¡œ í™•ì¸) -->
    <springProfile name="prod">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="FILE"/>
        </root>
        
        <!-- í”„ë¡œë•ì…˜ì—ì„œëŠ” DEBUG ë ˆë²¨ ì œí•œ -->
        <logger name="com.example.crawler" level="INFO"/>
        <logger name="org.hibernate.SQL" level="WARN"/>
        <logger name="org.springframework.web" level="INFO"/>
    </springProfile>
    
    <!-- ê¸°ë³¸ ì„¤ì • (profile ì—†ì„ ë•Œ) -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>
    
    <!-- íŒ¨í‚¤ì§€ë³„ ë¡œê·¸ ë ˆë²¨ -->
    <logger name="com.example.crawler" level="DEBUG"/>
    <logger name="com.example.crawler.ingest" level="INFO"/>
    <logger name="com.example.crawler.service" level="INFO"/>
    <logger name="org.hibernate.SQL" level="WARN"/>
    <logger name="org.springframework.web" level="INFO"/>
</configuration>
